    <div class="container">
      <div class="col p-5 mx-auto col-lg-6 col-sm-10 m-3">
        <form
          class="form-control form-control-lg validar-form"
          id="inicio-de-sesion"
          action="/iniciar-sesion.html"
          method="POST"
        >
          <div class="mb-3">
            <label for="entradaCorreo" class="form-label"
              >Correo electronico</label
            >
            <input
              type="email"
              class="form-control"
              id="entradaCorreo"
              name="entradaCorreo"
              aria-describedby="emailHelp"
              data-validetta="required,email"
              placeholder="j.alvarez@mail.com"
              data-vd-message-required="Debes llenar el campo de Correo eléctronico"
            />
          </div>
          <div class="mb-3">
            <label for="entradaContrasena" class="form-label">Contraseña</label>
            <input
              type="password"
              class="form-control"
              data-validetta="required"
              id="entradaContrasena"
              name="entradaContrasena"
              data-vd-message-required="Debes llenar el campo de Contraseña"
            />
          </div>
          <!-- <a href="index.html" class="btn btn-primary col-12" role="button">Iniciar sesión</a> -->
          <button
            type="submit"
            class="btn btn-primary col-12"
            value="Iniciar sesión"
          >
            Iniciar sesión
          </button>
        </form>
      </div>
